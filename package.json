{
  "name": "autonomous-testing-ui",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "dotenv": "^17.3.1"
  },
  "scripts": {
    "test": "playwright test",
    "test:ci": "playwright test --retries=2 --reporter=html",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:auth": "playwright test --grep @auth",
    "test:auth:retry": "playwright test --grep @auth --retries=3",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:inventory": "playwright test --grep @inventory",
    "test:cart": "playwright test --grep @cart",
    "test:checkout": "playwright test --grep @checkout",
    "pw:install": "playwright install --with-deps",
    "governance:gate": "node ./scripts/ci/governance-gate.mjs governance-gate-report.md",
    "project:ready:item": "node ./scripts/git/project-ready-item.mjs",
    "project:ready:move": "node ./scripts/git/project-move-item.mjs",
    "project:ready:to-pr": "node ./scripts/git/project-ready-to-pr.mjs",
    "project:pr:merge:done": "node ./scripts/git/project-pr-merge-to-done.mjs",
    "actions:verify": "node ./scripts/git/verify-actions-setup.mjs",
    "project:create-pr-flow": "node ./scripts/git/create-pr-flow.mjs",
    "project:ready:work": "node ./scripts/git/project-ready-work.mjs"
  }
}
